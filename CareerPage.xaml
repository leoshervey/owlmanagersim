<Window x:Class="OWLSimGame.CareerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OWLSimGame"
        mc:Ignorable="d"
        Title="CareerPage" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE4C8C8" Offset="0.7"/>
                <GradientStop Color="#FF9C1818" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="closeGame" Content="Exit" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="143" Click="closeWindow" Margin="30,1016,0,0" RenderTransformOrigin="0.5,0.5" FontSize="24" FontFamily="Koverwatch">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.459"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image HorizontalAlignment="Left" Height="100" Margin="806,32,0,0" VerticalAlignment="Top" Width="110" Source="/ATL.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/testbackground2.jpg"/>
            </Image.OpacityMask>
        </Image>
        <Image HorizontalAlignment="Center" Height="104" Margin="0,28,0,0" VerticalAlignment="Top" Width="78" Source="/5246291-0002381718-Vs.pn.png"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="1022,32,0,0" VerticalAlignment="Top" Width="90" Source="/LDN.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/testbackground2.jpg"/>
            </Image.OpacityMask>
        </Image>
        <TextBox x:Name="nextMatch" HorizontalAlignment="Center" Height="94" Margin="0,137,0,0" Text="Next Match&#xD;&#xA;[DATE]" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" TextChanged="TextBox_TextChanged_1" Background="{x:Null}" TextAlignment="Center" FontFamily="Koverwatch" FontSize="48" BorderBrush="{x:Null}"/>
        <Button Content="Advance -&gt;" HorizontalAlignment="Left" Height="82" Margin="1628,0,0,0" VerticalAlignment="Top" Width="292" FontFamily="Koverwatch" FontSize="36" Click="Button_Click_3"/>
        <TextBox HorizontalAlignment="Left" Height="52" Margin="1628,80,0,0" Text="Current Date" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" TextAlignment="Center" FontFamily="Koverwatch" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged"/>
        <Button Content="Tactics" HorizontalAlignment="Center" Height="610" Margin="0,268,0,0" VerticalAlignment="Top" Width="584" FontFamily="Koverwatch" FontSize="72" Click="Button_Click_1" Foreground="White" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/background8.jpg" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Content="Transfer Market" HorizontalAlignment="Left" Height="610" Margin="50,268,0,0" VerticalAlignment="Top" Width="584" FontFamily="Koverwatch" FontSize="72" Click="Button_Click" Foreground="White" FontWeight="Regular" FontStyle="Normal" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/background6.jpg" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Content="Staff and Objectives" HorizontalAlignment="Left" Height="610" Margin="1296,268,0,0" VerticalAlignment="Top" Width="584" FontFamily="Koverwatch" FontSize="72" Click="Button_Click_2" BorderBrush="{x:Null}" Foreground="White" OpacityMask="Black">
            <Button.Background>
                <ImageBrush ImageSource="/background5.jpg" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Image x:Name="teamJerseys" HorizontalAlignment="Left" Height="191" Margin="50,41,0,0" VerticalAlignment="Top" Width="339" Source="/Atlanta_Reign_Jersey.png"/>

    </Grid>
</Window>
