<Window x:Class="OWLSimGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OWLSimGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}" Width="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Image HorizontalAlignment="Left" Height="1775" VerticalAlignment="Top" Width="3061" Source="/testbackground2.jpg"/>
        <Rectangle HorizontalAlignment="Left" Height="1232" Stroke="Black" VerticalAlignment="Top" Width="2142" Opacity="0.7" Margin="-158,-116,0,0">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Rectangle.Fill>
            <Rectangle.OpacityMask>
                <SolidColorBrush Color="#FF060606" Opacity="0.7"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Button x:Name="enterGame" Content="Enter Game" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="724" Click="openPage" Margin="0,502,0,0" FontFamily="Koverwatch" FontSize="48" Background="#FFCEB7A8" Foreground="#FFC95D14"/>
        <Button x:Name="enterGame_Copy" Content="Exit" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="724" Click="closePage" Margin="0,610,0,0" FontFamily="Koverwatch" FontSize="48" Background="#FFCEB7A8" Foreground="#FFC95D14"/>
        <Image HorizontalAlignment="Left" Height="334" Margin="777,152,0,0" VerticalAlignment="Top" Width="338" Source="/Overwatch_01.png.png" RenderTransformOrigin="0.519,0.525" Stretch="UniformToFill"/>

    </Grid>
</Window>
