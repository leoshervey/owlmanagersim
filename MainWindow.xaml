<Window x:Class="OWLSimGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OWLSimGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Image HorizontalAlignment="Left" Height="1331" VerticalAlignment="Top" Width="1893" Margin="780,0,0,0" Source="/testbackground2.jpg"/>
        <Rectangle HorizontalAlignment="Center" Height="828" Stroke="Black" VerticalAlignment="Center" Width="1586">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Rectangle.Fill>
            <Rectangle.OpacityMask>
                <SolidColorBrush Color="#FF060606" Opacity="0.7"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Button x:Name="enterGame" Content="Enter Game" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="724" Click="openPage" Margin="0,502,0,0" FontFamily="Lucida Fax" FontSize="36" Background="#FFCEB7A8" Foreground="#FFC95D14"/>
        <Image HorizontalAlignment="Left" Height="401" Margin="742,71,0,0" VerticalAlignment="Top" Width="408" Source="/Overwatch_01.png.png"/>

    </Grid>
</Window>
